<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/imageViewLayoutListDetail"
        android:src="@drawable/horror"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#FFFFFF"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleFindOutDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:textSize="24dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/descriptionFindOutDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description1"
            android:textSize="16dp"
            android:layout_marginBottom="40dp"/>

    </LinearLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView2"
        android:layout_weight="1">
    </ListView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/commentEditTextDetail"
            android:maxLines="1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#EEFFEE"
            android:textColor="#FF0000"
            android:text="@string/comment"
            android:id="@+id/commentBtnDetail"/>

    </LinearLayout>

</LinearLayout>